@using Volunteering.Domain.Enums
@using Volunteering.UI.Controllers
@model Volunteering.UI.Models.AccountViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Register a new Account:</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal well well-lg", role = "form" }))
{

    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <!--Name-->
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <!--Email-->
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <!--Password-->
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

    <!--Password Confirmation-->
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <!--Account Type-->
    <div class="form-group">
        @Html.LabelFor(m => m.AccountType, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Label("Volunteer: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, EAccountType.Volunteer, new { @checked = "checked" })
            @Html.Label("Ngo: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, EAccountType.Ngo)

        </div>
    </div>

    <!--Submit Button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>


}